$('.flash').html('<%= j render 'shared/flash' %>');
$('.comment-errors').html('<%= j render 'shared/errors', resource: @comment %>');

<% if @comment.persisted? %>
  $('.<%= "#{@comment.commentable_type.downcase}" %>-comments').append('<%= j render @comment %>');
  $('.comment-form #comment_content').val('');
  $('.comment-form').hide();
  $('.new-comment-link').show();
<% end %>

